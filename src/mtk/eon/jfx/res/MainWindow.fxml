<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import mtk.eon.jfx.*?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ToolBar?>
<?import mtk.eon.jfx.components.UIntField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.StackPane?>
<?import mtk.eon.jfx.components.Console?>
<?import javafx.scene.control.Label?>
<?import mtk.eon.jfx.components.TaskReadyProgressBar?>

<GridPane gridLinesVisible="true" prefWidth="800.0" prefHeight="600.0" stylesheets="/mtk/eon/jfx/res/application.cssext" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mtk.eon.jfx.FXMLController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" />
		<ColumnConstraints maxWidth="-Infinity" prefWidth="250.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<GridPane>
			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS" percentWidth="100.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints minHeight="150.0" prefHeight="150.0" />
				<RowConstraints minHeight="0.0" prefHeight="20.0" />
			</rowConstraints>
			<children>
				<BorderPane id="borderPane">
					<children>
						<ResizableCanvas fx:id="graph" height="${borderPane.height}" width="${borderPane.width}" onMouseClicked="#canvasOnMouseClicked"  onMouseDragged="#canvasOnMouseDragged"  onMousePressed="#canvasOnMousePressed" onMouseReleased="#canvasOnMouseReleased" onScroll="#canvasOnMouseScroll" />
					</children>
				</BorderPane>
				<Console fx:id="console" wrapText="true" GridPane.rowIndex="1" />
				<TaskReadyProgressBar fx:id="progressBar" GridPane.rowIndex="2" />
			</children>
		</GridPane>
		<Accordion fx:id="accordion" GridPane.columnIndex="1">
			<panes>
				<TitledPane animated="true" text="Network">
					<content>
						<VBox alignment="TOP_CENTER" spacing="8.0">
							<children>
								<Button onAction="#loadNetworkAction" text="Load" />
								<Button onAction="#testButton" text="Test Button" />
							</children>
						</VBox>
					</content>
				</TitledPane>
				<TitledPane animated="true" text="Simulation">
					<content>
						<VBox fx:id="settings" spacing="8.0">
							<children>
								<Label text="Algorithm" />
								<ComboBox fx:id="algorithms" promptText="Choose algorithm... " />
								<Separator />
								<CheckBox fx:id="allowModulationChange" text="Allow changing modulation on path?" />
								<Label text="Allowed Modulations" />
								<GridPane>
									<columnConstraints>
										<ColumnConstraints percentWidth="50" />
										<ColumnConstraints percentWidth="50" />
									</columnConstraints>
									<children>
										<CheckBox id="modulation0" text="BPSK" />
										<CheckBox id="modulation1" text="QPSK" GridPane.rowIndex="1" />
										<CheckBox id="modulation2" text="8QAM" GridPane.rowIndex="2" />
										<CheckBox id="modulation3" text="16QAM" GridPane.columnIndex="1" />
										<CheckBox id="modulation4" text="32QAM" GridPane.columnIndex="1" GridPane.rowIndex="1" />
										<CheckBox id="modulation5" text="64QAM" GridPane.columnIndex="1" GridPane.rowIndex="2" />
									</children>
								</GridPane>
								<Separator />
								<Label text="Best paths" />
								<UIntField fx:id="bestPaths" />
								<Separator />
								<Label text="Modulation metric" />
								<GridPane>
									<columnConstraints>
										<ColumnConstraints percentWidth="50" />
										<ColumnConstraints percentWidth="50" />
									</columnConstraints>
									<fx:define>
										<ToggleGroup fx:id="modulationMetric" />
									</fx:define>
									<children>
										<RadioButton text="Static" toggleGroup="$modulationMetric" selected="true" />
										<RadioButton text="Dynamic" toggleGroup="$modulationMetric" GridPane.columnIndex="1" />
									</children>
								</GridPane>
								<Separator />
								<Label text="Regenerator metric value" />
								<UIntField fx:id="regeneratorsMetricValue" />
								<Label text="Regenerators metric" />
								<GridPane>
									<columnConstraints>
										<ColumnConstraints percentWidth="50" />
										<ColumnConstraints percentWidth="50" />
									</columnConstraints>
									<fx:define>
										<ToggleGroup fx:id="regeneratorsMetric" />
									</fx:define>
									<children>
										<RadioButton text="Static" toggleGroup="$regeneratorsMetric" selected="true" />
										<RadioButton text="Dynamic" toggleGroup="$regeneratorsMetric" GridPane.columnIndex="1" />
									</children>
								</GridPane>
								<Separator />
								<Button text="Start Simulation" onAction="#startSimulationAction" />
							</children>
						</VBox>
					</content>
				</TitledPane>
				<TitledPane animated="true" text="Settings">
					<content>
						<VBox minHeight="0.0" minWidth="0.0" prefHeight="180.0"	prefWidth="200.0">
							<children>
								<Button id="toggleInput" text="Toggle Input" />
							</children>
						</VBox>
					</content>
				</TitledPane>
                <TitledPane animated="true" prefHeight="119.0" prefWidth="202.0" text="Edit">
                    <content>
                        <AnchorPane prefHeight="2.0" prefWidth="200.0">
                            <children>
                                <GridPane layoutY="7.0" prefHeight="224.0" prefWidth="200.0">
                                    <columnConstraints>
                                        <ColumnConstraints prefWidth="147.0" />
                                        <ColumnConstraints prefWidth="34.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                        <RowConstraints prefHeight="18.0" />
                                    </rowConstraints>
                                    <children>
                                        <RadioButton fx:id="radioButtonDeleteLink" onAction="#deleteLinkChose" text="Delete link" GridPane.rowIndex="6" GridPane.valignment="CENTER">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="RBGroup" />
                                            </toggleGroup></RadioButton>
                                        <RadioButton fx:id="radioButtonDeleteNode" onAction="#deleteNodeChose" text="Delete node" toggleGroup="$RBGroup" GridPane.rowIndex="5" GridPane.valignment="BASELINE" />
                                        <RadioButton fx:id="radioButtonDeleteFewElements" mnemonicParsing="false" onAction="#deleteFewElementsChose" text="Delete few elements" toggleGroup="$RBGroup" GridPane.rowIndex="7" GridPane.valignment="BOTTOM" />
                                        <RadioButton onAction="#linkChose" text="Add link" toggleGroup="$RBGroup" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
                                        <RadioButton onAction="#nodeChose" text="Add node" toggleGroup="$RBGroup" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                                        <RadioButton fx:id="RBNoneChose" onAction="#noneChose" selected="true" text="None" toggleGroup="$RBGroup" GridPane.valignment="TOP" />
                                        <RadioButton text="Rotate around center" toggleGroup="$RBGroup" GridPane.rowIndex="9" onAction="#rotateAroundCenterChose" />
                                        <RadioButton text="Rotate around node" toggleGroup="$RBGroup" GridPane.rowIndex="10" onAction="#rotateAroundNodeChose"/>
                                        <Separator prefWidth="200.0" GridPane.rowIndex="8" />
                                        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                        <Separator prefWidth="200.0" GridPane.rowIndex="4" />
                                        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                        <Separator prefWidth="200.0" GridPane.rowIndex="1" />
                                        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </children></AnchorPane>
                    </content>
                </TitledPane>
                <TitledPane fx:id="propertiesTitledPane" animated="true" text="Properties">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </TitledPane>
			</panes>
		</Accordion>
	</children>
</GridPane>
